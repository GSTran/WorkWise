{
  "manifest_version": 3,
  "name": "WorkWise",
  "version": "1.0.0",
  "description": "Productivity Extension",
  "permissions": [
    "storage",
    "tabs",
    "offscreen",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "img/Bee Logo.png",
    "48": "img/Bee Logo.png",
    "128": "img/Bee Logo.png"
  },
  "host_permissions": ["https://zenquotes.io/api/"],
  "action": {
    "default_icon": {
      "16": "img/Bee Logo.png",
      "24": "img/Bee Logo.png",
      "32": "img/Bee Logo.png"
    },
    "default_title": "WorkWise",
    "default_popup": "./popup/popup.html"
  }
}
